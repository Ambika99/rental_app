<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bookButton"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardCornerRadius="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:src="@drawable/bike1"
                android:id="@+id/bikeImage"/>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:text="BOOK"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:text="NOW"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/checkButton"
        android:layout_gravity="center"
        android:layout_width="180dp"
        android:layout_height="150dp"
        card_view:cardCornerRadius="10dp"
        android:layout_below="@+id/bookButton"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:src="@drawable/card_scooty"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="79dp"
            android:text="Check your bookings"
            android:textAllCaps="true"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/aboutUsButton"
        android:layout_gravity="center"
        android:layout_width="180dp"
        android:layout_height="150dp"
        card_view:cardCornerRadius="10dp"
        android:layout_below="@+id/bookButton"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:src="@drawable/about_us_image"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="79dp"
            android:text="about us"
            android:textAllCaps="true"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:paddingTop="20dp"
            android:textColor="@color/colorPrimary"
            />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/contactUsButton"
        android:layout_gravity="center"
        android:layout_width="180dp"
        android:layout_height="150dp"
        card_view:cardCornerRadius="10dp"
        android:layout_below="@+id/checkButton"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="75dp"
            android:paddingTop="20dp"
            android:gravity="center"
            android:src="@drawable/contact_us_image"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="79dp"
            android:text="contact us"
            android:textAllCaps="true"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:paddingTop="20dp"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/signOutButton"
        android:layout_gravity="center"
        android:layout_width="180dp"
        android:layout_height="150dp"
        card_view:cardCornerRadius="10dp"
        android:layout_below="@+id/aboutUsButton"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:src="@drawable/sign_out_image"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="79dp"
            android:text="sign out"
            android:textAllCaps="true"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:paddingTop="20dp"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>